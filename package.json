{
    "name": "pintomind-player",
    "version": "1.0.0",
    "description": "Player app for PinToMind",
    "main": "src/main/main.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "start": "electron .",
        "dist": "electron-builder --linux",
        "log": "scripts/log",
        "ssh": "scripts/ssh",
        "publish": "scripts/publish",
        "build_and_publish": "npm run dist && npm run publish --"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/favo/pintomind-os-player.git"
    },
    "build": {
        "appId": "com.favo.app",
        "productName": "PinToMind Player",
        "artifactName": "pintomind-player.${ext}",
        "linux": {
            "category": "Utility",
            "packageCategory": "utils",
            "target": {
                "target": "AppImage",
                "arch": [
                    "arm64"
                ]
            }
        }
    },
    "author": {
        "name": "Favo AS",
        "email": "favo@post.no"
    },
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/favo/pintomind-os-player/issues"
    },
    "homepage": "https://github.com/favo/pintomind-os-player#readme",
    "devDependencies": {
        "electron": "^33.2.1",
        "electron-builder": "^24.1.0"
    },
    "dependencies": {
        "@appsignal/javascript": "^1.3.30",
        "electron-dl": "^3.5.0",
        "electron-json-storage": "^4.6.0",
        "electron-shutdown-command": "^2.0.1",
        "electron-store": "^8.1.0",
        "electron-updater": "^6.3.9",
        "i": "^0.3.7",
        "qrcode": "^1.5.3",
        "shell-quote": "^1.8.1",
        "socket.io-client": "^4.7.1",
        "systeminformation": "^5.18.7"
    }
}
